#    end if;



if a1=0 then
    if b1=0 then
         if c1=0 then
         DM[2,1]:=1; #case 000
         else
		DM[3,1]:=2; #case 00c
         end if;
   elif c1=0 then
       DM[4,1]:=3;  #case 0b0
   elif b1=c1 then
       DM[5,1]:=4; #case 0bb
   else DM[6,1]:=5; #case 0bc
   end if;
else #a1!=0
     if b1=0 then
        if c1=0 then
          DM[7,1]:=6; #case a00
        elif a1=c1 then
            DM[8,1]:=7; #case a0a
         else
            DM[9,1]:=8; #case a0c
        end if;
      else 
      if c1=0 then
      	 if a1=b1 then
               DM[10,1]:=9;   #case aa0
                else
            	 DM[11,1]:=10;  #case ab0
          end if;
      else #none are zero
  if a1=b1 then
        if b1=c1 then
         DM[12,1]:=11;  #case aaa
        else
          DM[13,1]:=12; #case aab
        end if;
     elif a1=c1 then
         DM[14,1]:=13; #case aba
     elif b1=c1 then
         DM[15,1]:=14; #case abb
     else
         DM[16,1]:=15; #case abc
     end if;
end if;
end if;
end if;



end proc;

